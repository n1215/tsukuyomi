{
    "name": "n1215/tsukuyomi",
    "description": "A PSR-7/PSR-15 minimal web framework.",
    "keywords": [
        "psr-15",
        "psr-7",
        "http",
        "framework",
        "web"
    ],
    "type": "library",
    "homepage": "https://github.com/n1215/tsukuyomi",
    "license": "MIT",
    "authors": [
        {
            "name": "n1215",
            "email": "knakae1215@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "n1215/hakudo": "dev-master",
        "illuminate/container": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "N1215\\Tsukuyomi\\": "src"
        }
    },
    "require-dev": {
        "zendframework/zend-diactoros": "^1.4",
        "phpunit/phpunit": "^6.5"
    },
    "autoload-dev": {
        "psr-4": {
            "N1215\\Tsukuyomi\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "rm -rf ./build",
            "mkdir ./build",
            "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage --coverage-clover=build/coverage.clover"
        ]
    }
}
